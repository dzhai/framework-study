    <!-- 指明满足"/exclude.jsp*"的页面，将被排除，不被装饰 -->
    <mapping path="/login.htm" exclue="true" />
    <mapping path="/left.htm" exclue="true" />
    <mapping path="/map.htm" exclue="true" />
    <mapping path="*.json" exclue="true" />
