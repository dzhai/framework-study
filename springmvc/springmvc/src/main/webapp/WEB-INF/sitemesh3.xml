<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 指明满足"*.htm"的页面，将被"dashboard.jsp"所装饰 -->
    <mapping path="*.htm" decorator="/views/sitemesh3/dashboard.jsp"/>
    
    <!-- 指明满足"/exclude.jsp*"的页面，将被排除，不被装饰 -->
    <mapping path="/error.htm" exclue="true" />
    <mapping path="/404.htm" exclue="true" />
    
    <content-processor>
    	<tag-rule-bundle class="com.github.dzhai.util.ExtHtmlTagRuleBundle" />
 	</content-processor>
</sitemesh>